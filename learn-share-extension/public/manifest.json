{
  "manifest_version": 3,
  "name": "Learn Sync",
  "version": "1.0.0",
  "description": "A Chrome extension for learning and sharing",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 